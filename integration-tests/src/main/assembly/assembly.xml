<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>distribution</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <files>
        <file>
            <source>src/main/resources/README</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>

    <fileSets>
        <fileSet>
            <directory>src/main/resources/sql</directory>
            <outputDirectory>sql</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>target/jboss-as-run/jboss-as-7.1.1.Final</directory>
            <outputDirectory>jboss</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>**/standalone/tmp/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>h2</outputDirectory>
            <includes>
                <include>*:h2:jar:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
